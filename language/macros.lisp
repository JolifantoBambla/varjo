(in-package :varjo)

(v-defmacro cond (&rest clauses)
  `(if ,(caar clauses)
       ,(cadar clauses)
       ,@(when (rest clauses)
               `((cond ,@(rest clauses))))))

(v-defmacro incf (place &optional (delta 1))
  `(progn (setf ,place (+ ,place ,delta))
          ,place))

(v-define-compiler-macro + (&rest numbers)
  (cond
    ((= (length numbers) 1) (first numbers))
    ((> (length numbers) 2)
     `(%+ ,(first numbers) (+ ,@(rest numbers))))
    (t `(%+ ,@numbers))))

(v-define-compiler-macro - (&rest numbers)
  (if (> (length numbers) 2)
      `(%- ,(first numbers) (- ,@(rest numbers)))
      `(%- ,@numbers)))

(v-define-compiler-macro * (&rest numbers)
  (if (> (length numbers) 2)
      `(%* ,(first numbers) (* ,@(rest numbers)))
      `(%* ,@numbers)))

(v-define-compiler-macro / (&rest numbers)
